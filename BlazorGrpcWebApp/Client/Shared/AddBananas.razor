@inject IBananaService BananaService
@inject IAppSettingsService AppSettingsService

<MudButton  @onclick="IncreaseBananaCount" 
            Size="Size.Small"
            Variant="Variant.Filled" 
            Color="Color.Secondary">
            <MudIcon Icon="@Icons.Filled.Add"/>
</MudButton>

@code {
    public async Task IncreaseBananaCount()
    {
        if(bool.Parse(AppSettingsService.GetValueFromSharedSec("AddBananas")))
            await BananaService.GrpcAddBananas(10);
        else await BananaService.AddBananas(10);
    }
}
